{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="lg:w-1/3 md:w-1/2 container mx-auto my-10 bg-white rounded-lg py-5 px-8" >
            <h1 class="text-center text-lg font-bold mb-4" >{{ 'J’ai déjà un compte Darktolib' | trans }}</h1>

            <div class="pb-3">
                <label for="inputEmail">{{ 'Email' | trans }}</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-input" autocomplete="email" required autofocus>
            </div>

            <div class="pb-3">
                <label for="inputPassword">{{ 'Mot de passe' | trans }}</label>
                <input type="password" name="password" id="inputPassword" class="form-input" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="flex flex-row justify-center pb-3">
                <button type="submit" class="bg-gradient-to-r from-blue-400 to-blue-200 py-2 px-4 rounded-lg text-white font-bold text-sm hover:from-blue-200 hover:to-blue-400 transition-all duration-300 ease-in-out mt-6">
                    {{ 'Se connecter' | trans }}
                </button>
            </div>

            <p class="flex justify-center">
                <a href="{{ path('app_register') }}" class="text-indigo-900 py-2 px-4 text-sm font-medium">
                    S'inscrire
                </a>
            </p>

            <p class="text-center pt-3">
                <a class="text-indigo-900 text-sm font-medium" href="{{ path('app_forgot_password_request') }}">
                    {{ "J'ai oublié mon mot de passe." }}
                </a>
            </p>


        </div>

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}
    </form>
{% endblock %}
