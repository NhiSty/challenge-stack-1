{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
{% endblock %}


{% block body %}

    <div class="flex items-center justify-center py-12 px-4">
        <div class="bg-white rounded-lg w-full">
            <div>
                <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">J'ai déjà un compte DarktoLib</h2>
            </div>
            <form class="mt-8" method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <div>
                    <div class="text-center">
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control border" placeholder="Adresse Email" autocomplete="email" required>
                    </div>
                    <br />
                    <div class="text-center">
                        <input type="password" name="password" id="inputPassword" class="form-control border" placeholder="Mot de passe" autocomplete="current-password" required>
                    </div>
                    <br />

                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}" >

                <div class="flex justify-center">
                    <button type="submit" class="border border-transparent rounded-full bg-indigo-600 py-2 px-4 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                        Se connecter
                    </button>
                </div>


                <div class="text-center">
                    <div class="text-sm">
                        <a href="{{ path('app_forgot_password_request') }}" class="font-medium text-indigo-600 hover:text-indigo-500">
                            Mot de passe oublié
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
