{{ form_start(form) }}

        <div class="pb-3">
            {% if is_granted('ROLE_PRATICIEN') == false %}
                <p>Je suis praticien</p>
                <label class="pb-3" for="description">{{ 'Description du document' | trans }}</label>
                <span class="form-input-error">{{ form_errors(form.description) }}</span>
                {{ form_widget(form.description) }}
            {% endif %}
        </div>

        <div class="pb-3">
            {% if is_granted('ROLE_ADMIN') %}
                <label for="affectTo">{{ 'Affecter le document Ã  ' | trans }}</label>
                <span class="form-input-error">{{ form_errors(form.user_id) }}</span>
                {{ form_widget(form.user_id) }}
            {% endif %}
        </div>

        {% if (is_granted('ROLE_PRATICIEN')) %}
            {% for i in 0.. necessaryDocs|length-1 %}
            <div class="pb-3">
                <label for="docs">{{ necessaryDocs[i].name ~ ' : ' | trans }}</label>
                <span class="form-input-error">{{ form_errors(form['docFile'~i]) }}</span>
                {{ form_widget(form['docFile'~i]) }}
            {% endfor %}
        {% else %}
            <span class="form-input-error">{{ form_errors(form.docFile) }}</span>
            {{ form_widget(form.docFile) }}
        {% endif %}

            </div>

        <div class="flex flex-row justify-center pb-3">
            <button class="bg-gradient-to-r from-blue-400 to-blue-200 py-2 px-4 rounded-lg text-white font-bold text-sm hover:from-blue-200 hover:to-blue-400 transition-all duration-300 ease-in-out mt-6">
                {{ button_label|default('Ajouter') }}
            </button>
        </div>
{{ form_end(form) }}