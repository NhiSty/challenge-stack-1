{% extends 'base.html.twig' %}

{% block title %}Clinic{% endblock %}

{% block body %}
    <div class="sm:max-w-md mx-auto bg-white sm:rounded-lg overflow-hidden shadow-lg my-0 sm:my-6">
        <div class="p-4 bg-gray-800 text-white">
            <h1 class="text-2xl font-bold">{{ clinic.name }}</h1>
        </div>
        <div class="p-4">
            <div class="mb-4">
                <a href="{{ path('admin_app_clinic_index') }}" class="gradient px-4 py-2 rounded-lg text-white font-bold create-new">
                    <i class="fas fa-arrow-left mr-2"></i>
                    {{ 'Retour Ã  la liste'|trans }}
                </a>
            </div>
            <table class="table-auto w-full">
                <tbody>
                <tr>
                    <th class="border px-4 py-2">Id</th>
                    <td class="border px-4 py-2">{{ clinic.id }}</td>
                </tr>
                <tr>
                    <th class="border px-4 py-2">Name</th>
                    <td class="border px-4 py-2">{{ clinic.name }}</td>
                </tr>
                <tr>
                    <th class="border px-4 py-2">Country</th>
                    <td class="border px-4 py-2">{{ clinic.country }}</td>
                </tr>
                <tr>
                    <th class="border px-4 py-2">City</th>
                    <td class="border px-4 py-2">{{ clinic.city }}</td>
                </tr>
                <tr>
                    <th class="border px-4 py-2">Address</th>
                    <td class="border px-4 py-2">{{ clinic.address }}</td>
                </tr>
                </tbody>
            </table>
            <div class="flex justify-between mt-4 flex-col sm:flex-row">
                <div class="flex justify-between gap-2">
                    {{ include('/Back/clinic/_delete_form.html.twig') }}
                    <a class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" href="{{ path('admin_app_clinic_edit', {'id': clinic.id}) }}">Edit</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
