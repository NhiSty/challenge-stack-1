{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col items-center justify-center py-12 sm:px-6 lg:px-8">
        <div class="w-full">
            <h2 class="text-3xl font-extrabold text-center text-gray-900">
                {{ 'Bienvenue ' ~ user.firstname ~ ' sur votre interface administrateur' }}
            </h2>
        </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 container mx-auto">
        <a href="{{ path('admin_app_user_index') }}" class="border border-gray-300 p-4 rounded-lg hover:shadow-lg transition duration-300 bg-blue-400">
            <h3 class="text-lg font-medium mb-2 text-white">{{ 'Utilisateurs' }}</h3>
            <p class="text-gray-300 text-sm">{{ 'Gérer les utilisateurs de
                l\'application.'|trans }}</p>
        </a>
        <a href="{{ path('admin_app_clinic_index') }}" class="border border-gray-300 p-4 rounded-lg hover:shadow-lg transition duration-300 bg-blue-400">
            <h3 class="text-lg font-medium mb-2 text-white">{{ 'Clinic'|trans }}</h3>
            <p class="text-gray-300 text-sm">{{ "Gérer les cliniques de
                l'application."|trans }}</p>
        </a>
        <a href="{{ path('admin_app_consultation_index') }}" class="border border-gray-300 p-4 rounded-lg hover:shadow-lg transition duration-300 bg-blue-400">
            <h3 class="text-lg font-medium mb-2 text-white">{{ 'Consultation' }}</h3>
            <p class="text-gray-300 text-sm">{{ 'Gérer les consultations
                enregistrées.'|trans }}</p>
        </a>
        <a href="{{ path('admin_app_document_storage_index') }}" class="border border-gray-300 p-4 rounded-lg hover:shadow-lg transition duration-300 bg-blue-400">
            <h3 class="text-lg font-medium mb-2 text-white">Documents</h3>
            <p class="text-gray-300 text-sm">Gérer les documents des utilisateurs.</p>
        </a>
        <a href="{{ path('admin_app_drug_index') }}" class="border border-gray-300 p-4 rounded-lg hover:shadow-lg transition duration-300 bg-blue-400">
            <h3 class="text-lg font-medium mb-2 text-white">Médicaments</h3>
            <p class="text-gray-300 text-sm">Gérer les médicaments enregistrés.</p>
        </a>
        <a href="{{ path('admin_app_speciality_index') }}" class="border border-gray-300 p-4 rounded-lg hover:shadow-lg transition duration-300 bg-blue-400">
            <h3 class="text-lg font-medium mb-2 text-white">Spécialités</h3>
            <p class="text-gray-300 text-sm">Gérer les spécialités médicales des practitiens.</p>
        </a>
        <a href="{{ path('admin_app_appointment_index') }}" class="border border-gray-300 p-4 rounded-lg hover:shadow-lg transition duration-300 bg-blue-400">
            <h3 class="text-lg font-medium mb-2 text-white">Rendez-vous</h3>
            <p class="text-gray-300 text-sm">Gérer les rendez-vous des utilisateurs.</p>
        </a>
        <a href="{{ path('admin_app_agenda_index') }}" class="border border-gray-300 p-4 rounded-lg hover:shadow-lg transition duration-300 bg-blue-400">
            <h3 class="text-lg font-medium mb-2 text-white">Agenda</h3>
            <p class="text-gray-300 text-sm">Gérer les agendas des practiciens.</p>
        </a>
    </div>
{% endblock %}
