<form method="post" action="{{ path('admin_app_drug_delete', {'id': drug.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ drug.id) }}">
    <button class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 {{ class|default('') }}">Supprimer</button>
</form>
