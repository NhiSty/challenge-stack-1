{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="h-full">
        <div class="lg:w-1/2 container mx-auto my-10 bg-white rounded-lg min-h-screen-1/2 py-5 px-8" >
            <h1 class="text-center text-lg font-bold mb-4" >{{ 'Nouveau sur Darktolib ?' | trans() }}</h1>

            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            {{ form_start(registrationForm) }}
            <div class="pb-3">
                <label>
                    {{ 'Civilité' | trans() }}
                </label>
                <span class="form-input-error">{{ form_errors(registrationForm.gender) }}</span>
                {{ form_widget(registrationForm.gender, {'attr': {'class': 'form-input' }}) }}
            </div>

            <div class="pb-3">
                <label>
                    {{ 'Prénom' | trans() }}
                </label>
                <span class="form-input-error">{{ form_errors(registrationForm.firstname) }}</span>
                {{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-input' }}) }}
            </div>

            <div class="pb-3">
                <label>
                    {{ 'Nom' | trans() }}
                </label>
                <span class="form-input-error">{{ form_errors(registrationForm.lastname) }}</span>
                {{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-input' }}) }}
            </div>

            <div class="pb-3">
                <label>
                    {{ 'Email' | trans() }}
                </label>
                <span class="form-input-error">{{ form_errors(registrationForm.email) }}</span>
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-input' }}) }}
            </div>

            <div class="pb-3">
                <label>
                    {{ 'Saisir mot de passe' | trans() }}
                </label>
                <span class="form-input-error">{{ form_errors(registrationForm.plainPassword.first) }}</span>
                {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-input' }}) }}
            </div>

            <div class="pb-3">
                <label>
                    {{ 'Confirmer le mot de passe' | trans() }}
                </label>
                <span class="form-input-error">{{ form_errors(registrationForm.plainPassword.second) }}</span>
                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-input' }}) }}
            </div>

            <div class="flex flex-row justify-center">
                <button
                        type="submit"
                        class="bg-gradient-to-r from-blue-400 to-blue-200 py-2 px-4 rounded-lg text-white font-bold text-sm hover:from-blue-200 hover:to-blue-400 transition-all duration-300 ease-in-out mt-6"
                >
                    {{ "S'inscrire" | trans() }}
                </button>
            </div>

            {{ form_end(registrationForm) }}

            <p class="text-center mt-6">
                {{ "J'ai déjà un compte, " | trans() }}
                <a href="{{ path('app_login') }}" class="text-indigo-900 text-sm font-medium">
                    {{'me connecter'}}
                </a>
            </p>

        </div>
    </div>

{% endblock %}
