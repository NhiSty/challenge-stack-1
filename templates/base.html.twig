<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
{% block navbar %}
  <nav class="bg-blue-400 sticky top-0 w-full z-50">
    <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
      <div class="relative flex items-center justify-between">
        <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
          <!-- Mobile menu button-->
          <button type="button" id="toggleMobile"
                  class="inline-flex items-center justify-center rounded-md p-2 text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
                  aria-controls="mobile-menu" aria-expanded="false">
            <span class="sr-only">Open main menu</span>
            <!--
              Icon when menu is closed.
              Heroicon name: outline/bars-3
              Menu open: "hidden", Menu closed: "block"
            -->
            <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                 stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round"
                    d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
            </svg>
            <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                 stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
        <div class="flex flex-1 items-center justify-center py-2 sm:items-stretch sm:justify-start">
          <div class="flex flex-shrink-0 items-center">
            <a href="{{ path('app_front_index_index') }}">
              <img class="block h-16 w-auto lg:hidden" src="{{ asset('assets/img/logo.png') }}" alt="logo">
              <img class="hidden h-16 w-auto lg:block" src="{{ asset('assets/img/logo.png') }}" alt="logo">
            </a>
          </div>
        </div>
        <div class="inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0 hidden sm:ml-6 sm:flex hidden">
          {% if is_granted('ROLE_USER') %}
            <a href="#"
               class="text-white px-3 py-8 text-sm font-normal hover:bg-blue-200 hover:text-blue-500"
               aria-current="page"><i class="fa-sharp fa-solid fa-calendar-day"></i> Mes rendez-vous</a>
            <a href="{{ path('app_front_document_storage_index') }}"
               class="text-white px-3 py-8 text-sm font-normal hover:bg-blue-200 hover:text-blue-500"
               aria-current="page"><i class="fa-sharp fa-solid fa-file-medical"></i> Mes documents</a>
            <a href="#"
               class="text-white px-3 py-8 text-sm font-normal hover:bg-blue-200 hover:text-blue-500"
               aria-current="page"><i class="fa-regular fa-user"></i> Mon compte</a>
            <a href="{{ path('app_logout') }}"
               class="text-white px-3 py-8 text-sm font-normal hover:bg-blue-200 hover:text-blue-500"
               aria-current="page"><i class="fa-solid fa-right-from-bracket"></i> Déconnexion</a>
          {% else %}
            <a href="#" class="bg-white text-blue-500 px-3 py-2 rounded-md text-sm font-medium mr-2"
               aria-current="page">Vous êtes praticien ?</a>
            <a href="{{ path('app_login') }}"
               class="text-white px-3 py-8 text-sm font-normal hover:bg-blue-200 hover:text-blue-500"
               aria-current="page">Connexion</a>
            <a href="{{ path('app_register') }}"
               class="text-white px-3 py-8 text-sm font-normal hover:bg-blue-200 hover:text-blue-500"
               aria-current="page">Inscription</a>
          {% endif %}
        </div>
      </div>
    </div>

    <!-- Mobile menu, show/hide based on menu state. -->
    <div class="hidden" id="mobile-menu">
      <div class="space-y-1 px-2 pt-2 pb-3">
        {% if is_granted('ROLE_USER') %}
          <a href="#"
             class="text-white hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium hover:bg-blue-200 hover:text-blue-500"
             aria-current="page"><i class="fa-sharp fa-solid fa-calendar-day"></i> Mes rendez-vous</a>
          <a href="#"
             class="text-white hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium hover:bg-blue-200 hover:text-blue-500"><i
                class="fa-sharp fa-solid fa-file-medical"></i> Mes documents</a>
          <a href="#"
             class="text-white hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium hover:bg-blue-200 hover:text-blue-500"><i
                class="fa-regular fa-user"></i> Mon compte</a>
          <a href="{{ path('app_logout') }}"
             class="text-white hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium hover:bg-blue-200 hover:text-blue-500"><i
                class="fa-solid fa-right-from-bracket"></i> Déconnexion</a>
        {% else %}
          <a href="#" class="bg-white text-blue-500 block px-3 py-2 rounded-md text-base font-medium"
             aria-current="page">Vous êtes praticien ?</a>
          <a href="{{ path('app_login') }}"
             class="text-white hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium hover:bg-blue-200 hover:text-blue-500">Connexion</a>
          <a href="{{ path('app_register') }}"
             class="text-white hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium hover:bg-blue-200 hover:text-blue-500">Inscription</a>
        {% endif %}
      </div>
    </div>
  </nav>
{% endblock %}
