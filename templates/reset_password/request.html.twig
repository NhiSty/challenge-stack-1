{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="lg:w-1/3 md:w-1/2 container mx-auto my-10 bg-white rounded-lg py-5 px-8" >
        <h1 class="text-center text-lg font-bold mb-4" >{{ 'Réinitialiser mon mot de passe par email' | trans() }}</h1>
        <p class="text-sm pb-6">
            {{ 'Saisissez votre adresse mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.' | trans }}
        </p>
        {{ form_start(requestForm) }}
        <div class="pb-3">
            <label>
                {{ form_label(requestForm.email) }}
            </label>
            <span class="form-input-error">{{ form_errors(requestForm.email) }}</span>
            {{ form_widget(requestForm.email, {'attr': {'class': 'form-input' }}) }}
        </div>

        <button class="bg-gradient-to-r from-blue-400 to-blue-200 py-2 px-4 rounded-lg text-white font-bold text-sm hover:from-blue-200 hover:to-blue-400 transition-all duration-300 ease-in-out mt-6">
            {{ 'Envoyer un email de réinitialisation du mot de passe' | trans }}
        </button>
        {{ form_end(requestForm) }}
    </div>

{% endblock %}
