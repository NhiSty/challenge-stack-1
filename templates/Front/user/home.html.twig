{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}


<div class="example-wrapper">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% if not app.user.verified %}
      <div class="flex flex-col items-center justify-center py-12 sm:px-6 lg:px-8 min-h-screen-1/2">
        <div class="flex flex-col items-center justify-center w-full max-w-5xl px-4 py-12 space-y-4 text-center bg-white border border-gray-200 rounded-lg shadow-md">
          <h1 class="text-4xl font-extrabold text-gray-900">{{ 'Encore une petite étape'|trans }}</h1>
          <p class="text-lg font-medium text-gray-500">{{ "Votre compte n'est pas encore vérifié. Veuillez vérifier votre email pour un lien de vérification."|trans }}</p>
          <p class="text-lg font-medium text-gray-500">{{ "Si votre lien a expiré, vous pouvez cliquer"|trans }} <a href="{{ path('app_send_verification_email') }}" class="text-indigo-600 hover:text-indigo-500">{{ "ici"|trans }}</a> {{ "pour renvoyer l'email de vérification."|trans }}</p>
        </div>
      </div>
    {% endif %}
</div>
{% endblock %}
