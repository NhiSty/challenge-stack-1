{% extends 'base.html.twig' %}


{% block title %} Listes des documents envoyé pour devenir praticien certifié {% endblock %}

{% block body %}

{# list of all my document storages #}

    {% for docs in sended_docs %}

        <div class="flex flex-col items-center justify-center py-12 sm:px-6 lg:px-8 min-h-screen-1/2">
            <div class="flex flex-col items-center justify-center w-full max-w-5xl px-4 py-12 space-y-4 text-center bg-white border border-gray-200 rounded-lg shadow-md">
                <h1>Listes des documents envoyé pour devenir praticien certifié</h1>
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Nom du fichier :</th>
                        <td>
                            <p>{{ docs.name|split('_')[1] }}</p>
                        </td>
                    </tr>
                    <tr>
                        <th>Desciption :</th>
                        <td>
                            <p>{{ docs.description }}</p>
                        </td>
                    </tr>
                    <tr>
                        <th>Fichiers :</th>
                        <td>
                            <a href="{{ vich_uploader_asset(docs, 'docFile') }}" target="_blank">Ouvrir {{ docs.name|split('_')[1] }}</a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

