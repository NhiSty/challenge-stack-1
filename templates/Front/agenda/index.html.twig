{% extends 'base.html.twig' %}

{% block title %}Agenda index{% endblock %}

{% block body %}
    <div class="sm:max-w-md mx-auto bg-white sm:rounded-lg overflow-hidden shadow-lg my-0 sm:my-6">
        <div class="p-4 bg-gray-800 text-white">
            {% if agenda %}
            <h1 class="text-2xl font-bold text-center">Votre agenda, {{ agenda.owner.firstname }} {{ agenda.owner.lastname }}</h1>
            {% else %}
            <h1 class="text-2xl font-bold text-center">Votre agenda</h1>
            {% endif %}
        </div>
        <div class="p-4">
            {% if agenda %}
            <table class="table-auto w-full">
                <tbody>
                <tr>
                    <th class="border px-4 py-2">{{ 'Disponibilités'|trans }}</th>
                    <td class="border px-4 py-2">{{ agenda.availabilityDays ? agenda.availabilityDays|join(', ') : '' }}</td>
                </tr>
                <tr>
                    <th class="border px-4 py-2">{{ 'Créneaux'|trans }}</th>
                    <td class="border px-4 py-2">{{ agenda.slots ? agenda.slots|join(', ') : '' }}</td>
                </tr>
                </tbody>
            </table>
            <div class="flex justify-between mt-4 flex-col sm:flex-row">
                <div class="flex justify-between gap-2">
                    <a class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" href="{{ path('app_agenda_edit') }}">Modifier</a>
                </div>
            </div>
            {% else %}
            <div>
                <p class="text-center">Vous n'avez pas encore créé votre agenda</p>
                <div class="flex justify-center mt-4">
                    <a class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" href="{{ path('app_agenda_new') }}">Créer mon agenda</a>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
